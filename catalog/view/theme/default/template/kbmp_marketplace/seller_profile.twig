    $('select[name=\'seller_country\']').on('change', function() {
	$.ajax({
		url: 'index.php?route=account/account/country&country_id=' + this.value,
		dataType: 'json',
		beforeSend: function() {
			$('select[name=\'seller_country\']').after(' <i class="fa fa-circle-o-notch fa-spin"></i>');
		},
		complete: function() {
			$('.fa-spin').remove();
		},
		success: function(json) {
			html = '<option value="">{{ text_select_state }}</option>';

			if (json['zone'] && json['zone'] != '') {
				for (i = 0; i < json['zone'].length; i++) {
					html += '<option value="' + json['zone'][i]['zone_id'] + '"';

                                        {% if (seller_details['state'] is defined) %} 
                                        if (json['zone'][i]['zone_id'] == '{{ seller_details['state'] }}') {
                                            html += ' selected="selected"';
					}
                                        {% endif %}					

					html += '>' + json['zone'][i]['name'] + '</option>';
				}
			}

			$('select[name=\'seller_state\']').html(html);
		},
		error: function(xhr, ajaxOptions, thrownError) {
			alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
		}
	});
    });

