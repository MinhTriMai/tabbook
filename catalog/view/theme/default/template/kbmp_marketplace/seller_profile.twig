<script type="text/javascript">
    $("#sellerprofile-update-btn").click(function () {
    
        var is_error = false;
        $('.velsof_error_label').hide();
        $('.kb_error_message').remove();
        $('#sellerProfileForm input').removeClass('kb_error_field');
        $('#sellerProfileForm select').removeClass('kb_error_field');
        $('#sellerProfileForm textarea').removeClass('kb_error_field');
        
        $("#General_Settings").parent().removeClass("error");
        $("#meta_Settings").parent().removeClass("error");
        $("#policy_Settings").parent().removeClass("error");
        $("#payment_Settings").parent().removeClass("error");

        //Shop Title Validation
        
        $(".title").each(function () {
            var title = velovalidation.checkMandatory($(this));
            if (title != true) {
                 is_error = true;
                $("#General_Settings").parent().addClass("error");  
                $(this).addClass('kb_error_field');
                $(this).after("<span class='kb_error_message'>" + title + "</span>");
            }
        });
        

        //Seller Phone Number Validation
        var seller_phone_number_err = velovalidation.checkMandatory($('input[name="seller_phone_number"]'));
        if (seller_phone_number_err != true)
        {
            is_error = true;
            $('input[name="seller_phone_number"]').addClass('kb_error_field');
            $('input[name="seller_phone_number"]').after('<span class="kb_error_message">' + seller_phone_number_err + '</span>');
            $("#General_Settings").parent().addClass("error");
        } else {
            var seller_phone_number_err = velovalidation.checkPhoneNumber($('input[name="seller_phone_number"]'));
            if (seller_phone_number_err != true)
            {
                is_error = true;
                $('input[name="seller_phone_number"]').addClass('kb_error_field');
                $('input[name="seller_phone_number"]').after('<span class="kb_error_message">' + seller_phone_number_err + '</span>');
                $("#General_Settings").parent().addClass("error");
            }
        }

        //Business Mail Validation
        var get_notification = $('select[name="seller_notification_type"]').val();
        if (get_notification == 0 || get_notification == 2) {
            var business_email_err = velovalidation.checkMandatory($('input[name="business_email"]'));
            if (business_email_err != true)
            {
                is_error = true;
                $('input[name="business_email"]').addClass('kb_error_field');
                $('input[name="business_email"]').after('<span class="kb_error_message">' + business_email_err + '</span>');
                $("#General_Settings").parent().addClass("error");
            } else {
                var business_email_err = velovalidation.checkEmail($('input[name="business_email"]'));
                if (business_email_err != true)
                {
                    is_error = true;
                    $('input[name="business_email"]').addClass('kb_error_field');
                    $('input[name="business_email"]').after('<span class="kb_error_message">' + business_email_err + '</span>');
                    $("#General_Settings").parent().addClass("error");
                }
            }
        } else {
            var business_email = $('input[name="business_email"]').val();
            if (business_email != '') {
                var business_email_err = velovalidation.checkEmail($('input[name="business_email"]'));
                if (business_email_err != true)
                {
                    is_error = true;
                    $('input[name="business_email"]').addClass('kb_error_field');
                    $('input[name="business_email"]').after('<span class="kb_error_message">' + business_email_err + '</span>');
                    $("#General_Settings").parent().addClass("error");
                }
            }
        }

        //Country Validation
        var country_err = velovalidation.checkMandatory($('select[name="seller_country"]'));
        if (country_err != true)
        {
            is_error = true;
            $('select[name="seller_country"]').addClass('kb_error_field');
            $('select[name="seller_country"]').after('<span class="kb_error_message">' + country_err + '</span>');
            $("#General_Settings").parent().addClass("error");
        }

        //State/City Validation
        var state_err = velovalidation.checkMandatory($('select[name="seller_state"]'));
        if (state_err != true)
        {
            is_error = true;
            $('select[name="seller_state"]').addClass('kb_error_field');
            $('select[name="seller_state"]').after('<span class="kb_error_message">' + state_err + '</span>');
            $("#General_Settings").parent().addClass("error");
        }

        //Address Validation
        var address_err = velovalidation.checkMandatory($('textarea[name="seller_address"]'));
        if (address_err != true)
        {
