                                </th>
                                <th>
                                    {% if (sort == 'kscr.comment') %} 
                                    <a href="{{ sort_comment }}" class="{{ (order) }}">{{ column_comment }}</a>
                                    {% else %} 
                                    <a href="{{ sort_comment }}">{{ column_comment }}</a>
                                    {% endif %} 
                                </th>
