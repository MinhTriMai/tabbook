        <div class="row">            
            <div class="col-lg-12 col-md-12">
                <ul class="nav nav-tabs scroll_tabs_theme_light" id="tabs2">
                    <li><a href="index.php?route=extension/module/kbmp_marketplace&user_token={{ token }}">{{ text_settings }}</a></li>
